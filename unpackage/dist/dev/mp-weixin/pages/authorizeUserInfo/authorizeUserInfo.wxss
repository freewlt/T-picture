
.logo{
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.avatarUrl{
  width: 192rpx;
  height: 192rpx;
  margin: 126rpx 0 40rpx;
  border-radius: 50%;
}
.txt {
  font-size:32rpx;
  color: #333;
  font-weight: bold;
}
.designBtn{
  width: 600rpx!important;
  height: 96rpx!important;
  line-height: 96rpx!important;
  padding: 0;
  margin-top: 200rpx;
  background: -webkit-linear-gradient(314deg,rgba(255,91,98,1) 0%,rgba(238,39,52,1) 100%);
  background: linear-gradient(136deg,rgba(255,91,98,1) 0%,rgba(238,39,52,1) 100%);
  border-radius: 25px;
  color: #fff;
  font-size: 36rpx;
  font-weight:500;
}
.designBtn[disabled]:not([type]){
  opacity:0.5;
  color:#fff;
}

